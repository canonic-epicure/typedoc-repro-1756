{
    "compilerOptions" : {
        "importHelpers"             : true,
        "experimentalDecorators"    : true,

        "noImplicitThis"            : true,
        "strictBindCallApply"       : true,
        // https://github.com/microsoft/TypeScript/issues/29872#issuecomment-868535962
        "strictPropertyInitialization" : false,

        "jsx"                       : "react",
        "jsxFactory"                : "TextJSX.createElement",
        "jsxFragmentFactory"        : "TextJSX.Fragment",

        "target"                    : "es2017",
        "sourceMap"                 : false,

        "lib"                       : [
            "esnext",
            "dom"
        ],

        "module"                    : "esnext",
        "moduleResolution"          : "node",

        "allowSyntheticDefaultImports"    : true
    },

    "include" : [
        "index.ts",
        "index2.ts",
        "src/**/*.ts"
    ],

    "exclude" : [
    ]
}
